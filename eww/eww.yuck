(defwindow bar_short
	:monitor 0
	:windowtype "dock"
	:exclusive true	
  :namespace "eww-bar"
  :geometry (geometry 
              :y "10px"
              :height 40
              :width 2540
		        	:anchor "top center"
			      )

	(box :class "main-container"
	  (box :class "container" :halign "start"
